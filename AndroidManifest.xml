        <activity
            android:name="it.infn.ct.aginfrasgmobile.WebViewActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.infn.ct.aginfrasgmobile.MenuFragment"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.infn.ct.aginfrasgmobile.ProductsDetails"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.infn.ct.aginfrasgmobile.ReplicasActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.infn.ct.aginfrasgmobile.DownloadWebViewActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="it.infn.ct.aginfrasgmobile.UserSettingActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="it.infn.ct.aginfrasgmobile.HowToActivity" >
        </activity>
        <activity
            android:name="it.infn.ct.aginfrasgmobile.FiltersActivity"
            android:label="@string/title_activity_filters" >
